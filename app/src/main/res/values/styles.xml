<resources>
    <!--https://lbs.amap.com/faq/android/android-navi/amapnavi-view-blank-->
    <!--尝试将导航 Manifest 中，导航 View 所在的 activity 的 android:theme 修改为：-->
    <!--android:theme="@android:style/Theme.Light.NoTitleBar"-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <!--关于全屏的文档：https://developer.android.com/training/system-ui-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="TextAppearance.Tab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>
</resources>
